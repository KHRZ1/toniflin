<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tonControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/teal_200"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <Spinner
            android:id="@+id/tonSpinner"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border20dp"
            android:padding="5sp"
            android:layout_weight="0.8" />

        <TextView
            android:id="@+id/tonAdd"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:paddingVertical="5dp"
            android:textColor="@color/black"
            android:background="@drawable/border10dp"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:text="@string/add"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tonItemList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700"
        android:layout_below="@id/tonControl"
        android:layout_above="@+id/tonResult"/>

    <RelativeLayout
        android:id="@+id/tonResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tonResultJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/tf_x_c" />

        <TextView
            android:id="@+id/tonTotalResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tonResultJudul"
            android:text="@string/_0_52"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/tonResultJudul" />

        <TextView
            android:id="@+id/tonAdjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border10dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_alignParentRight="true"
            android:text="@string/adjust"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tonIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tonTotalResult"
            android:layout_toRightOf="@id/tonTotalResult"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:text="(Isotonis)" />

    </RelativeLayout>

</RelativeLayout>